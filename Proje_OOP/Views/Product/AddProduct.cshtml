@model Proje_OOP.Entity.Product
@{
    ViewData["Title"] = "AddProduct";
    Layout = "~/Views/Shared/_CoreLayout.cshtml";
}

<h1>Ürün Ekleme Sayfası</h1>

<form method="post">
    @Html.Label("Ürün Adı")
    @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control" })
    <br />
    @Html.Label("Fiyat")
    @Html.TextBoxFor(x => x.ProdıctPrice, new { @class = "form-control" })
    <br />
    @Html.Label("Stok Sayısı")
    @Html.TextBoxFor(x => x.ProductStock, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Ürünü Ekle</button>
</form>